div#create-defects.collapse
  div.well
    form(method="POST", class="defect-form")
      label
        h5 Project
      select(name="scope")#scope-picker
      label
        h5 Title
      input(name="title", class="span3", placeholder="... is broken")
      label
        h5 Description
      textarea(name="description", class="span3", placeholder="as a ... ... is broken")
      label
       h5 Severity
      select(name="severity")#severity
        option High
        option Medium
        option Low
      div.form-actions
        button(type="submit").btn.btn-primary Submit defect
        =" "
        button.btn Cancel