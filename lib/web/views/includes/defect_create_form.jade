div#create-defects.collapse.in
  div.well
    - var v1_response = v1_response
    if v1_response
      h1=v1_response
    form(method="POST", class="defect-form")
      label
        h5 Project
      select(name="scope")#scope-picker
      label
        h5 Title
      input(name="title", class="span3", placeholder="... is broken")
      label
        h5 Description
      textarea(name="description", class="span3", placeholder="as a ... ... is broken")
      label
       h5 Severity
      select(name="severity")#severity
        option High
        option Medium
        option Low
      div.form-actions
        button(type="submit", class="btn btn-primary") Submit defect
        | 
        button(class="btn") Cancel